<theme>
	<listPrimaryColor>EEEEEE</listPrimaryColor>
	<descColor>000000</descColor>
	<listSelectorColor>FF6600</listSelectorColor>
	<hideHeader />
	<hideDividers />
	<listLeftAlign />

        <listFont>
            <path>./../general_art/pixeljosh6.ttf</path>
            <size>0.04</size>
        </listFont>        
        <descriptionFont>
            <path>./../general_art/pixeljosh6.ttf</path>
            <size>0.03</size>
        </descriptionFont>        

	<gameImagePos>$infoWidth/2 0.225</gameImagePos>

    <menuScrollSound>./../sounds/GS25.wav</menuScrollSound>
    <menuSelectSound>./../sounds/GS42.wav</menuSelectSound>
    <menuBackSound>./../sounds/GS28.wav</menuBackSound>
    <menuOpenSound>./../sounds/SNES5.wav</menuOpenSound>

    <fastSelectColor>FFFFFF</fastSelectColor>
    <boxBackground>./../general_art/darkgrey.png</boxBackground>
    <fastSelectFont>
        <path>./../general_art/pixeljosh6.ttf</path>
        <size>0.15</size>
    </fastSelectFont>        

	<component>
		<type>image</type>
		<path>./pcengine_art/pcengine_bg_orange_stripes.png</path>
		<pos>0 0</pos>
		<dim>0.5 1</dim>
		<origin>0 0</origin>
		<tiled />
	</component>

	<component>
		<type>image</type>
		<path>./pcengine_art/pcengine_top_bg.png</path>
		<pos>0 0</pos>
		<dim>0.5 0</dim>
		<origin>0 0</origin>
	</component>

	<component>
		<type>image</type>
		<path>./pcengine_art/pcengine_bg_cross.png</path>
		<pos>0.5 0</pos>
		<dim>0.5 1</dim>
		<origin>0 0</origin>
		<tiled />
	</component>

	<component>
		<type>image</type>
		<path>./pcengine_art/divider.png</path>
		<pos>.5 .5</pos>
		<dim>.01 1</dim>
		<origin>.5 .5</origin>
	</component>
</theme>

