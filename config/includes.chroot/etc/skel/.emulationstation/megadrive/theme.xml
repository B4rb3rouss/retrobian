<theme>
	<listPrimaryColor>EEEEEE</listPrimaryColor>
	<descColor>000000</descColor>
	<listSelectorColor>333399</listSelectorColor>
	<hideHeader />
	<hideDividers />
	<listLeftAlign />

    <listFont>
        <path>./../general_art/pixeljosh6.ttf</path>
        <size>0.04</size>
    </listFont>        
    <descriptionFont>
        <path>./../general_art/pixeljosh6.ttf</path>
        <size>0.03</size>
    </descriptionFont>        

    <menuScrollSound>./../sounds/GS25.wav</menuScrollSound>
    <menuSelectSound>./../sounds/GS42.wav</menuSelectSound>
    <menuBackSound>./../sounds/GS28.wav</menuBackSound>
    <menuOpenSound>./../sounds/SNES5.wav</menuOpenSound>

    <fastSelectColor>FFFFFF</fastSelectColor>
    <boxBackground>./../general_art/darkgrey.png</boxBackground>
    <fastSelectFont>
        <path>./../general_art/pixeljosh6.ttf</path>
        <size>0.15</size>
    </fastSelectFont>        

    <component>
            <type>image</type>
            <path>./megadrive_art/megadrive_bg_dark_stripes.png</path>
            <pos>.5 0</pos>
            <dim>1 1</dim>
    <origin>0 0</origin>
    <tiled />
    </component>

    <component>
            <type>image</type>
            <path>./megadrive_art/megadrive_bg_red_stripes.png</path>
            <pos>0 0</pos>
            <dim>.45 1</dim>
    <origin>0 0</origin>
    <tiled />
    </component>

    <component>
            <type>image</type>
            <path>./megadrive_art/divider.png</path>
            <pos>.5 .5</pos>
            <dim>.01 1</dim>
    <origin>.5 .5</origin>
    <useAlpha />
    </component>

    <component>
            <type>image</type>
            <path>./megadrive_art/megadrive_top_bg.png</path>
            <pos>0 0</pos>
            <dim>.55 0</dim>
    <origin>0 0</origin>
    <useAlpha />
    </component>

    <component>
            <type>image</type>
            <path>./megadrive_art/megadrive_logo.png</path>
            <pos>.25 0.02</pos>
            <dim>0 .12</dim>
    <origin>.5 0</origin>
    <useAlpha />
    </component>
</theme>

